@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager;
@inject UserManager<IdentityUser> UserManager;

@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "superuser"))
{
    <li class="nav-item dropdown show">
        <a class="dropdown-toggle nav-link text-dark" href="#" data-toggle="dropdown">Superuser</a>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-area="Superuser" asp-controller="Role" asp-action="Index">Roles</a>
            <a class="dropdown-item" asp-area="Superuser" asp-controller="User" asp-action="Index">Users</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">Types</a>
        </div>
    </li>
}