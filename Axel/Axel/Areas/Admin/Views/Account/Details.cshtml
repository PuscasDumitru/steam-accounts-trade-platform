@model Domain.DataTransferObjects.AccountDto

<form method="get">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">
                Account Details
            </h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SteamLevel"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SteamLevel" disabled class="form-control" />

                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SteamLink"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SteamLink" disabled class="form-control" />

                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BansCount"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BansCount" disabled class="form-control" />

                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />

                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="YearCreated"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="YearCreated" disabled class="form-control" />

                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DateTimeAdded"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DateTimeAdded" disabled class="form-control" />

                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <a asp-route-Id="@Model.Id" asp-action="Edit" class="btn btn-info w-100">Edit</a>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>